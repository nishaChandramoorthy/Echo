%html
  %head
    %link(rel="stylesheet" type="text/css" href="css/bootstrap.css")
    :css
      body {
        padding-top: 40px;
        padding-botton: 40px;
      }
      .sidebar-nav {
        padding: 9px 0px 10px 0;
      }
      .container-fluid {
        padding-left: 250px;
        padding-right: 250px;
      }

    %link(rel="stylesheet" type="text/css" href="css/bootstrap-responsive.css")

    :css
      .container {
        width:940px;
      }
      .sidebar{
        margin-top: -10px;
        width: 200px;
      }
      .well {
        height: 100%;
        border-radius: 0px;
        -moz-border-radius: 0px;
      }
      .search-query {
        height: 28px;
      }
      .main-content {
        width: 740px;
        margin-left: 0px;
        margin-top: -10px;
      }
      .footer-hr {
        margin-top: 0px;
      }
      .remove-padding-bottom {
        padding-bottom: 0px;
      }
      .remove-margin-bottom {
        margin-bottom: 0px;
      }
      .nav-list > li > a,
      .nav-list .nav-header {
        padding: 5px 37px;
      }
      .profile-pic-container {
        padding: 10px 10px 10px 0px;
      } 
      .profile-pic {
        height: 125px;
        width: 125px;
        overflow:hidden;
      }
      .user-info {
        font-style: normal;
        font-size: 13px;
        padding: 6px 37px 6px 21px;
      }
      dep {
        font-size: 10px;
      }
      year {
        font-size: 10px;
      }
      .sidebar-count {
        margin-right: -12px;
        float: right;
      }
      .navbar .app-logo {
        font-weight: bold;
      }
      .main-breadcrumb {
        margin-left: 30px;
      }

    %script(src="js/jquery.js" type="text/javascript")
    %script(src="js/bootstrap-dropdown.js" type="text/javascript")
    %script(src="js/json2.js" type="text/javascript")
    %script(src="js/underscore.js" type="text/javascript")
    %script(src="js/backbone.js" type="text/javascript")
    %script(src="js/echo.js" type="text/javascript")    

  %body
    %div.navbar.navbar-fixed-top
      %div.navbar-inner
        %div.container
          %a.btn.btn-navbar(data-toggle="collapse"  data-target=".nav-collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand.app-logo(href="#") Echo
          %div.nav-collapse.in.collapse
            %ul.nav
              %li
                %a(href="#") 
                  %i.icon-home.icon-white
                  Home
              %li
                %a(href="#")
                  %i.icon-book.icon-white
                  Bookshelf
              %li
                %a(href="#")
                  %i.icon-comment.icon-white
                  Suggestions
              %li
                %a(href="#")
                  %i.icon-bookmark.icon-white
                  Reading List
              %li
                %a(href="#")
                  %i.icon-envelope.icon-white
                  Activity
            %form.navbar-search.pull-left
              %input.search-query.span2(placeholder="Search" type="text")  
            %ul.nav.pull-right
              %li.dropdown
                %a.dropdown-toggle(href="#" data-toggle="dropdown")
                  %i.icon-cog.icon-white
                  %b.caret
                %ul.dropdown-menu
                  %li
                    %a(href="#")
                      Profile
    %div.container
      %div.row
        %div.span3.sidebar
          %div.well.sidebar-nav.remove-margin-bottom
            %ul.nav.nav-list#sidebar
              %li.profile-pic-container
                %a.profile-pic(href="#")
                  %img(src="img/user.jpg" alt="Kumar Ishan")
              %li.user-info
                %strong Kumar Ishan  
                %br
                %dep Computer Science Engineering
                %br
                %year 4th Year
              %hr
              %li
                %a(href="#")
                  %i.icon-envelope
                  Activity        
                  %div.sidebar-count
                    %span.label.label-info 15
              %li
                %a(href="#")
                  %i.icon-search 
                  Search
              %li
                %a#sidebar-bookshelf(href="#")
                  %i.icon-comment 
                  Suggestions
                  %div.sidebar-count
                    %span.label.label-info 10 
              %li
                %a(href="#")
                  %i.icon-book 
                  Bookshelf
                  %div.sidebar-count
                    %span.label.label-info 8
              %li
                %a(href="#")
                  %i.icon-bookmark 
                  Reading List
                  %div.sidebar-count
                    %span.label.label-info 5
              %li
                %a(href="#")
                  %i.icon-glass 
                  Communities
                  %div.sidebar-count
                    %span.label.label-info 7
              %li
                %a(href="#")
                  %i.icon-heart 
                  Friends
                  %div.sidebar-count 
                    %span.label.label-info 100
              %li
                %a(href="#")
                  %i.icon-time 
                  History
        %div.span5.main-content
          %div.well.remove-padding-bottom.remove-margin-bottom#main-content
            %div.row
              %ul.breadcrumb.main-breadcrumb
                %li
                  %a(href="#") Bookshelf
                  %span.divider /
                %li.active Physics
            %div.row
              
      %hr.footer-hr
      %footer
        %p@ SDSLabs 2012     
